<h2>Update Post</h2>

<form class="form update-post-form" data-id={{post.id}}>
  <div class="form-group">
    <label for="post-title">Title:</label>
    <input class="form-input" type="text" id="post-title" value={{post.title}} />
  </div>
  <div class="form-group">
    <label for="post-content">Content:</label>
    <input class="form-input" type="text" id="post-content" value={{post.content}}/>
  </div>
  <div class="form-group">
    <button class="btn btn-info updatePost" type="submit">update post</button>
  </div>
  <div class="form-group">
    <button class="btn btn-danger delete-post">delete post</button>
  </div>
</form>

<script src="/js/editPost.js"></script>
